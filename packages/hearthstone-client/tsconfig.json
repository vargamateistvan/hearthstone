{
  "compilerOptions": {
    "target": "es5",
    // "baseUrl": "\u0000",
    // "paths": {
    //   "@types/*": [
    //     "src/types/*"
    //   ],
    //   "@enums/*": [
    //     "src/enums/*"
    //   ],
    //   "@app/*": [
    //     "src/components/*"
    //   ]
    // },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/utils/*"
  ]
}